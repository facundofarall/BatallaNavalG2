arry_pr		RMB		N_PR*EL_SIZE
arry_aux	RMB		N_AUX*EL_SIZE

msg		FCC		'Sub1'
		FCB		0
		FCC		'Sub2'
		FCB		0
		FCC		'Sub3'
		FCB		0
		FCC		'Car1'
		FCB		0	
		FCC		'Car2'
		FCB		0	
		FCC		'Car3'
		FCB		0

		END